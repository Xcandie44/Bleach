<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ikkaku"
    tools:context=".Third">

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button7"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:text="У нас в 11-м отряде не любят\nкидо,но выбор за тобой:\n Какой стиль боя выбираешь? "
        android:textSize="10dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="101dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onKidoClick"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button7"
        android:layout_marginStart="22dp"
        android:text="Кидо"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onFencingClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="Фехтование"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="468dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_alignParentEnd="true"
        android:onClick="onFightClick"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="11dp"
        android:text="Рукопашный \nбой"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="345dp" />


</RelativeLayout>